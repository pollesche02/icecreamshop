    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Gone !<br>
    <input type="radio" name="devoured" value="0"> Still Available
  </div> --}}

      
    </form>
  </div>

  <div class="row">
    <div class="col-6">
      <h2>Your Favorite IceCream Flavors!</h2>
      <ul class="col-6">
        {{#each icecream}}
        {{#unless devoured}}
         <li class="row">
         <h5 class="col-5"> {{icecream_flavor}}</h5>
    
        </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-6">
      <h2>Best IceCream!</h2>
      <ul>
        {{#each icecream}}
        {{#if devoured}}
        <li class="row">
         <h5 class="col-5"> {{icecream_flavor}}</h5>
          <button class="change-devoured col-2" data-id={{id}}>Save</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

</div>